<?xml version="1.0" encoding="utf-8" ?>
<Patch>
<!-- Removes normal fermenting barrel, because it has no use over the universal fermenting barrel -->
	<Operation Class="PatchOperationRemove">
	  <xpath>*/ThingDef[defName = "FermentingBarrel"]/designationCategory</xpath>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success> 
		<operations>
			<li Class="PatchOperationTest">
				<xpath>*/ThingDef[defName="UniversalFermenter"]</xpath>
			</li>
		
			<li Class="PatchOperationRemove">
				<xpath>*/ThingDef[defName="UniversalFermenter"]/costList/WoodLog</xpath>
			</li>
			
			<li Class="PatchOperationRemove">
				<xpath>*/ThingDef[defName="UniversalFermenter"]/constructEffect</xpath>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName="UniversalFermenter"]</xpath>
				<value>
					<costStuffCount>30</costStuffCount>
					<stuffCategories>
						<li>Woody</li>
					</stuffCategories>
				</value>
			</li>
		</operations>
  </Operation>

	<Operation Class="PatchOperationAttributeSet">
		<success>Always</success>
	  <xpath>*/ThingDef/comps/li[contains(@Class,'UniversalProcessors.CompProperties_UniversalFermenter')]</xpath>
		<attribute>Class</attribute>
		<value>UniversalFermenter.CompProperties_UniversalFermenter</value>
	</Operation>

</Patch>